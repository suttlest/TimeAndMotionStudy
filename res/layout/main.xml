<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent">
<TableRow android:layout_weight="1">
	<Button android:id="@+id/btnStartStop"
		android:text="@string/btnStartStop"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
		android:hapticFeedbackEnabled="true"
	/>
	<Button android:id="@+id/btnReset"
		android:text="@string/btnReset"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
		android:hapticFeedbackEnabled="true"
	/>
</TableRow>
<TableRow android:layout_weight="1">
	<Chronometer android:id="@+id/chronometer1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:textSize="36sp"
		android:gravity="center|center_horizontal">
	</Chronometer>
</TableRow>
<TableRow android:layout_weight="2">
	<Button android:id="@+id/btnTask1"
		android:text="Task 1"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
		android:padding="10dp"
	/>
	<Button android:id="@+id/btnTask2"
		android:text="Task 2"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
</TableRow>
<TableRow android:layout_weight="2">
	<Button android:id="@+id/btnTask3"
		android:text="Task 3"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
	<Button android:id="@+id/btnTask4"
		android:text="Task 4"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
</TableRow>
<TableRow android:layout_weight="2">
	<Button android:id="@+id/btnTask5"
		android:text="Task 5"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
	<Button android:id="@+id/btnTask6"
		android:text="Task 6"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
</TableRow>
<TableRow android:layout_weight="2">
	<Button android:id="@+id/btnTask7"
		android:text="Task 7"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
	<Button android:id="@+id/btnTask8"
		android:text="Task 8"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
</TableRow>
<TableRow android:layout_weight="2">
	<Button android:id="@+id/btnTask9"
		android:text="Task 9"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
	<Button android:id="@+id/btnTask10"
		android:text="Task 10"
		android:textSize="36sp"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	/>
</TableRow>
<TableRow android:layout_weight="1">
	<TextView/>
</TableRow>
<TableRow android:layout_weight="1">
	<ImageButton android:id="@+id/btnPicture"
		android:src="@android:drawable/ic_menu_camera"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	></ImageButton>
	<ImageButton android:id="@+id/btnNote"
		android:src="@android:drawable/ic_btn_speak_now"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"
	></ImageButton>
</TableRow>
</TableLayout>
